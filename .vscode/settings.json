{
  "makefile.configureOnOpen": false,
  "files.associations": {
    ".env": "dotenv",
    ".env.local": "dotenv",
    ".env.local.dist": "dotenv"
  },

  /* ===============================
   * Global Editor Rules (non-indentation)
   * =============================== */
  "editor.defaultFormatter": "prettier.prettier-vscode",
  "editor.detectIndentation": false,
  "editor.trimAutoWhitespace": true,
  "editor.renderWhitespace": "boundary",
  "editor.renderControlCharacters": false,
  "editor.rulers": [80, 100, 120],
  "editor.wordWrap": "off",
  "editor.formatOnSave": true,
  "editor.formatOnPaste": false,
  "editor.formatOnType": false,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit"
  },

  /* ===============================
   * Files & Whitespace Hygiene
   * =============================== */
  "files.insertFinalNewline": false,
  "files.trimTrailingWhitespace": true,
  "files.eol": "\n",

  /* ===============================
   * Per-language indentation (VS Code)
   * =============================== */

  "[json]": {
    "editor.defaultFormatter": "prettier.prettier-vscode",
    "editor.tabSize": 2,
    "editor.indentSize": 2,
    "editor.insertSpaces": true,
    "files.insertFinalNewline": true
  },
  "[jsonc]": {
    "editor.defaultFormatter": "prettier.prettier-vscode",
    "editor.tabSize": 2,
    "editor.indentSize": 2,
    "editor.insertSpaces": true,
    "files.insertFinalNewline": true
  },
  "[yaml]": {
    "editor.defaultFormatter": "prettier.prettier-vscode",
    "editor.tabSize": 2,
    "editor.indentSize": 2,
    "editor.insertSpaces": true,
    "files.insertFinalNewline": true
  },

  "[typescript]": {
    "editor.defaultFormatter": "prettier.prettier-vscode",
    "editor.tabSize": 4,
    "editor.indentSize": 4,
    "editor.insertSpaces": true,
    "files.insertFinalNewline": true
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "prettier.prettier-vscode",
    "editor.tabSize": 4,
    "editor.indentSize": 4,
    "editor.insertSpaces": true,
    "files.insertFinalNewline": true
  },
  "[javascript]": {
    "editor.defaultFormatter": "prettier.prettier-vscode",
    "editor.tabSize": 4,
    "editor.indentSize": 4,
    "editor.insertSpaces": true,
    "files.insertFinalNewline": true
  },
  "[javascriptreact]": {
    "editor.defaultFormatter": "prettier.prettier-vscode",
    "editor.tabSize": 4,
    "editor.indentSize": 4,
    "editor.insertSpaces": true,
    "files.insertFinalNewline": true
  },

  "[vue]": {
    "editor.defaultFormatter": "prettier.prettier-vscode",
    "editor.tabSize": 4,
    "editor.indentSize": 4,
    "editor.insertSpaces": true,
    "files.insertFinalNewline": true
  },

  "[html]": {
    "editor.defaultFormatter": "prettier.prettier-vscode",
    "editor.tabSize": 2,
    "editor.indentSize": 2,
    "editor.insertSpaces": true,
    "files.insertFinalNewline": true
  },
  "[css]": {
    "editor.defaultFormatter": "prettier.prettier-vscode",
    "editor.tabSize": 2,
    "editor.indentSize": 2,
    "editor.insertSpaces": true,
    "files.insertFinalNewline": true
  },
  "[scss]": {
    "editor.defaultFormatter": "prettier.prettier-vscode",
    "editor.tabSize": 2,
    "editor.indentSize": 2,
    "editor.insertSpaces": true,
    "files.insertFinalNewline": true
  },
  "[svg]": {
    "editor.defaultFormatter": "prettier.prettier-vscode",
    "editor.tabSize": 2,
    "editor.indentSize": 2,
    "editor.insertSpaces": true,
    "files.insertFinalNewline": true
  },

  "[xml]": {
    "editor.defaultFormatter": "prettier.prettier-vscode",
    "editor.tabSize": 4,
    "editor.indentSize": 4,
    "editor.insertSpaces": true,
    "files.insertFinalNewline": true
  },

  "[go]": {
    "editor.defaultFormatter": "golang.go",
    "editor.tabSize": 4,
    "editor.indentSize": 4,
    "editor.insertSpaces": false,
    "files.insertFinalNewline": true
  },
  "[go.mod]": {
    "editor.defaultFormatter": "golang.go",
    "editor.tabSize": 4,
    "editor.indentSize": 4,
    "editor.insertSpaces": false,
    "files.insertFinalNewline": true
  },

  "[dockerfile]": {
    "editor.defaultFormatter": "prettier.prettier-vscode",
    "editor.tabSize": 4,
    "editor.indentSize": 4,
    "editor.insertSpaces": true,
    "files.insertFinalNewline": true
  },

  "[shellscript]": {
    "editor.defaultFormatter": "prettier.prettier-vscode",
    "editor.tabSize": 4,
    "editor.indentSize": 4,
    "editor.insertSpaces": true,
    "files.insertFinalNewline": true
  },

  /* ===============================
   * Prettier (keep only non-indent globals here)
   * =============================== */
  "prettier.printWidth": 100
}
